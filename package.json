{
  "name": "kick-chat-viewer-electron",
  "version": "1.0.0",
  "description": "A desktop application for viewing Kick chat, with emote support.",
  "main": "main.js",
  "private": true,
  "author": "Your Name/Team",
  "homepage": "./",
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "test-react": "react-scripts test",
    "eject-react": "react-scripts eject",
    "start": "npm run build-react && electron .",
    "electron-dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@retconned/kick-js": "^0.5.3",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.kickchatviewer",
    "productName": "KickChatViewer",
    "files": [
      "main.js",
      "package.json",
      "node_modules",
      "build/**/*",
      "server/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
